<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:fab="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="pl.piotrstaniow.organizeme.TaskListFragment">
	<ListView
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:id="@+id/todoList"/>

	<com.getbase.floatingactionbutton.FloatingActionsMenu
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_alignParentBottom="true"
			android:layout_marginRight="16dp"
			android:layout_marginBottom="0dp"
			android:id="@+id/floating_menu"
			fab:fab_addButtonColorNormal="@color/accent"
			fab:fab_addButtonColorPressed="@color/accent_light"
			fab:fab_addButtonPlusIconColor="@android:color/white"
			fab:fab_addButtonSize="normal"
			fab:fab_labelStyle="@style/menu_labels_style"
			fab:fab_labelsPosition="left">
		<com.getbase.floatingactionbutton.FloatingActionButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/new_category_btn"
				fab:fab_colorNormal="@color/accent"
				fab:fab_title="Add category"
				fab:fab_size="mini"
				fab:fab_colorPressed="@color/accent_light"
				fab:fab_icon="@drawable/ic_action_new_label"
				/>

		<com.getbase.floatingactionbutton.FloatingActionButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				fab:fab_colorNormal="@color/accent"
				fab:fab_size="mini"
				fab:fab_title="Add task"
				fab:fab_icon="@drawable/ic_action_new"
				fab:fab_colorPressed="@color/accent_light"
				android:id="@+id/new_task_btn"
				/>

	</com.getbase.floatingactionbutton.FloatingActionsMenu>
</RelativeLayout>
