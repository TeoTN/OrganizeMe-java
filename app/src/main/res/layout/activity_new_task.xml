<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/task_desc_hint"
        android:id="@+id/task_desc"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/task_date_hint"
        android:editable="false"
        android:id="@+id/task_date"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="24dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="@string/btn_dismiss_task"
            android:id="@+id/dismiss_new_task"
            style="@style/Widget.AppCompat.ActionButton"
            android:textColor="@color/primary"
            android:layout_margin="4dp"
            android:minWidth="64dp"
            android:height="36dp"
            android:padding="8dp"
            android:layout_toLeftOf="@+id/create_new_task"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="@string/btn_create_task"
            android:id="@+id/create_new_task"
            style="@style/Widget.AppCompat.ActionButton"
            android:textColor="@color/primary"
            android:layout_margin="4dp"
            android:minWidth="64dp"
            android:height="36dp"
            android:padding="8dp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</LinearLayout>
